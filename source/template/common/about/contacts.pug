section.l-contacts
	.map#map
		img(src="assets/img/userfiles/map.jpg")
	.contacts
		.contacts__title.block-title контакты
		ul.contacts__list
			each contact in contacts
				li.contacts__item
					a.contacts__link(href= contact.link target="_blank")
						svg.contacts__icon
							use(xlink:href=`assets/img/sprite/sprite.svg#${contact.icon}`)
						.contacts__text= contact.title